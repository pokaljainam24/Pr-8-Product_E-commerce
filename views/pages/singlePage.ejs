                                        </div>

                                        <!-- Product Details -->
                                        <div class="col-md-9">
                                            <h4 class="mb-1">
                                                <%= cat.name %>
                                            </h4>

                                            <div class="mb-2 text-success fw-semibold">
                                                Extra ₹2,000 off
                                            </div>

                                            <h3 class="text-danger mb-1">
                                                ₹11,999
                                                <span class="text-muted fs-6 text-decoration-line-through ms-2">
                                                    ₹13,999
                                                </span>
                                                <span class="text-success fs-6 ms-2">
                                                    14% off
                                                </span>
                                            </h3>

                                            <ul class="list-unstyled mb-3">
                                                <li><strong>Brand:</strong> Samsung</li>
                                                <li><strong>Stock:</strong> 47 available</li>
                                                <li><strong>Warranty:</strong> 1 Year Manufacturer Warranty</li>
                                                <li><strong>Launch Date:</strong> 10 March 2024</li>
                                            </ul>

                                            <div>
                                                <a href="#" class="btn btn-warning me-2 px-4">Add To Cart</a>
                                                <a href="#" class="btn btn-danger px-4">Buy Now</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>

