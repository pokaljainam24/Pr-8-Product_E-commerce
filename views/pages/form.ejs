<%- include('../partials/adminheader') %>

    <!-- Bootstrap 5 CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <div class="page-wrapper"
        style=" background: linear-gradient(131deg,rgba(9, 9, 121, 1) 35%, rgba(0, 212, 255, 1) 100%);">
        <div class="page-breadcrumb">
            <div class="row">
                <div class="col-12 d-flex no-block align-items-center">
                    <h4 class="page-title text-white">Add Products Form</h4>
                    <div class="ml-auto text-right">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a class="text-white text-decoration-none fw-bold"
                                        href="#">Home</a></li>
                                <li class="breadcrumb-item active text-white fw-bold" aria-current="page">Library</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>

        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6 w-100">
                    <div class="card w-75 h-100">
                        <div class="container p-4">
                            <h2 class="text-center mb-4">Manage Categories</h2>

                            <!-- Tabs -->
                            <ul class="nav nav-pills justify-content-center mb-4" id="categoryTabs" role="tablist">
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link active" id="category-tab" data-bs-toggle="tab"
                                        data-bs-target="#category" type="button" role="tab">Category</button>
                                </li>
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link" id="subcategory-tab" data-bs-toggle="tab"
                                        data-bs-target="#subcategory" type="button" role="tab">Subcategory</button>
                                </li>
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link" id="extra-tab" data-bs-toggle="tab" data-bs-target="#extra"
                                        type="button" role="tab">Extra Category</button>
                                </li>
                            </ul>

                            <!-- Tab Content -->
                            <div class="tab-content" id="categoryTabsContent">
                                <!-- Category -->
                                <div class="tab-pane fade show active" id="category" role="tabpanel">
                                    <h4>Add Category</h4>
                                    <form action="/addProduct" method="POST" enctype="multipart/form-data">
                                        <div class="mb-3">
                                            <label class="form-label">Category Name</label>
                                            <input type="text" class="form-control" name="name"
                                                placeholder="Enter category name" required>
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label">Upload Image</label>
                                            <input type="file" class="form-control" name="image" required>
                                        </div>
                                        <button type="submit" class="btn btn-primary">Add Category</button>
                                    </form>
                                </div>

                                <!-- Subcategory -->
                                <div class="tab-pane fade" id="subcategory" role="tabpanel">
                                    <h4 class="mt-3 mb-4">Add Subcategory</h4>
                                    <form action="/addSubCategory" method="POST" enctype="multipart/form-data">

                                        <!-- Category selection -->
                                        <div class="mb-3">
                                            <label for="categoryId" class="form-label">Select Category</label>
                                            <select name="categoryId" id="categoryId" class="form-select" required>
                                                <% categories.forEach(cat=> { %>
                                                    <option value="<%= cat._id %>">
                                                        <%= cat.name %>
                                                    </option>
                                                    <% }) %>
                                            </select>
                                        </div>

                                        <!-- Subcategory name -->
                                        <div class="mb-3">
                                            <label for="subcategoryName" class="form-label">Subcategory Name</label>
                                            <input type="text" name="name" id="subcategoryName" class="form-control"
                                                placeholder="Enter subcategory name" required />
                                        </div>

                                        <!-- Image upload -->
                                        <div class="mb-3">
                                            <label for="subcategoryImage" class="form-label">Upload Image</label>
                                            <input type="file" name="image" id="subcategoryImage" class="form-control"
                                                required />
                                        </div>

                                        <!-- Submit button -->
                                        <button type="submit" class="btn btn-primary">Add SubCategory</button>
                                    </form>
                                </div>

                                <!-- Extra Category -->
                                <div class="tab-pane fade" id="extra" role="tabpanel">
                                    <h4>Add Extra Category</h4>
                                    <form action="/addExtraCategory" method="POST" enctype="multipart/form-data">
                                        <div class="mb-3">
                                            <label class="form-label">Extra-Category Name</label>
                                            <input type="text" name="name" class="form-control">
                                        </div>

                                        <div class="mb-3">
                                            <label class="form-label">Extra-Category Image</label>
                                            <input type="file" name="image" class="form-control">
                                        </div>

                                        <div class="mb-3">
                                            <label class="form-label">Select Category</label>
                                            <select name="categoryId" class="form-select" required>
                                                <% categories.forEach((category)=> { %>
                                                    <option value="<%= category._id %>">
                                                        <%= category.name %>
                                                    </option>
                                                    <% }) %>
                                            </select>
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label">Select Sub-Category</label>
                                            <select name="subCategoryId" class="form-select" required>
                                                <% subCategories.forEach((sub)=> { %>
                                                    <option value="<%= sub._id %>">
                                                        <%= sub.name %>
                                                    </option>
                                                    <% }) %>
                                            </select>
                                        </div>
                                        <button type="submit" class="btn btn-warning">Add Extra Category</button>
                                    </form>
                                </div>
                            </div>
                        </div> <!-- container -->
                    </div> <!-- card -->
                </div> <!-- col -->
            </div> <!-- row -->

            <!-- Quill Editor -->
            <div class="row mt-3">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Quill Editor</h4>
                            <div id="editor" style="height: 300px;">
                                <p>Hello World!</p>
                                <p>Some initial <strong>bold</strong> text</p>
                                <p><br></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div> <!-- container-fluid -->
    </div> <!-- page-wrapper -->

    <%- include('../partials/adminfooter') %>